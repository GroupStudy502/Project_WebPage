<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.choongang.file.mappers.FileInfoMapper">
<resultMap id="fileInfoMap" type="org.choongang.file.models.FileInfo">
        <result column="id" property="id" />
        <result column="userNo" property="userNo" />
        <result column="gid" property="gid" />
        <result column="location" property="location" />
        <result column="fileName" property="fileName" />
        <result column="extension" property="extension" />
        <result column="fileType" property="fileType" />
        <result column="regDt" property="regDt" />
    </resultMap>
    <select id="each" resultMap="fileInfoMap">
        SELECT * FROM fileInfo WHERE id=#{id}
    </select>
    <select id="list" resultMap="fileInfoMap">
        SELECT * FROM fileInfo WHERE gid=#{gid}
        <if test="location != null">
            AND location=#{location}
        </if>
        ORDER BY regDt
    </select>

    <insert id="add">
        INSERT INTO fileInfo (id, userNo, gid, location, fileName, extension, fileType)
        VALUES (file_seq.nextval, #{userNo}, #{gid}, #{location}, #{fileName}, #{extension}, #{fileType})
    </insert>

    <delete id="delete">
        DELETE FROM fileInfo WHERE id=#{id}
    </delete>

    <delete id="deletes">
        DELETE FROM fileInfo WHERE gid=#{gid}
        <if test="location != null">
            AND location=#{location}
        </if>
    </delete>

</mapper>